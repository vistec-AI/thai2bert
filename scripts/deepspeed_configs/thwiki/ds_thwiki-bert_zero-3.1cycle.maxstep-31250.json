{
    "train_batch_size": 8192,
    "train_micro_batch_size_per_gpu": 64,
    "gradient_accumulation_steps": 16,
    "optimizer": {
      "type": "AdamW",
      "params": {
        "lr": 0.0007,
        "betas": [
            0.9,
            0.98
          ],
        "eps": 1e-6,
        "weight_decay": 0.01
      }
    },
    "scheduler": {
      "type": "OneCycle",
      "params": {
          "cycle_first_step_size": 1250,
          "cycle_first_stair_count": 1250,
          "cycle_second_step_size": 30000,
          "cycle_second_stair_count": 30000,
          "decay_step_size": 0,
          "cycle_min_lr": 0.0000,
          "cycle_max_lr": 0.0007,
          "decay_lr_rate": 0.000,
          "cycle_min_mom": 0.9,
          "cycle_max_mom": 0.9,
          "decay_mom_rate": 0.0
      }
    },
    "fp16": {
      "enabled": true
    },
    "steps_per_print": 25,
    "zero_optimization": {
      "stage": 3,
      "offload_optimizer": {
          "device": "cpu",
          "pin_memory": true
      },
      "overlap_comm": true,
      "contiguous_gradients": true,
      "sub_group_size": 1e14,
      "reduce_bucket_size": "auto",
      "stage3_prefetch_bucket_size": "auto",
      "stage3_param_persistence_threshold": "auto",
      "stage3_max_live_parameters": 1e9,
      "stage3_max_reuse_distance": 1e9,
      "stage3_gather_fp16_weights_on_model_save": true
    }
  }